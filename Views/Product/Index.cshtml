@model List<Admin3.Models.ProductModel>
<a asp-action="Add_Edit" asp-controller="Product" class="btn btn-primary">Add</a>
<table class="table datatable">
    <thead>
        <tr>
            <th>ProductName</th>
            <th>ProductPrice</th>
            <th>ProductCode</th>
            <th>ProductCode</th>
            <th>Edit/Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.ProductPrice</td>
                <td>@product.ProductCode</td>
                <td>@product.ProductCode</td>
                <td><i class="fa-solid fa-pen-to-square"></i> &nbsp; &nbsp;<i class="fa-solid fa-trash" style="color: #EE4B2B"></i></td>
            </tr>
        }
    </tbody>
</table>