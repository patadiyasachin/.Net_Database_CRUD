@model OrderDetailModel
<form class="row g-3 m-3" asp-action="Save" asp-controller="OrderDetail" method="post">
    <div class="col-8">
        <input type="text" class="form-control" id="inputNanme4" asp-for="OrderDetailID" hidden>
    </div>
    <div class="col-8">
        <label for="inputEmail4" class="form-label">OrderID</label>
        <input type="text" class="form-control" id="inputEmail4" asp-for="OrderID">
    </div>

    <div class="col-8">
        <label for="inputNanme4" class="form-label">Shipping Address</label>
        <select class="form-control" asp-for="ProductID" asp-items="@(new SelectList(ViewBag.orderList, "OrderID", "ShippingAddress"))"></select>
        <option value="">Select Address</option>
        </select>
    </div>

    @* <div class="col-8">
        <label for="inputPassword4" class="form-label">ProductID</label>
        <input type="text" class="form-control" id="inputPassword4" asp-for="ProductID">
    </div> *@

    <div class="col-8">
        <label for="inputNanme4" class="form-label">ProductName</label>
        <select class="form-control" asp-for="ProductID" asp-items="@(new SelectList(ViewBag.productList, "ProductID", "ProductName"))"></select>
        <option value="">Select Product</option>
        </select>
    </div>


    <div class="col-8">
        <label for="inputAddress" class="form-label">Quantity</label>
        <input type="number" class="form-control" id="inputAddress" asp-for="Quantity">
    </div>
    <div class="col-8">
        <label for="inputNanme4" class="form-label">Amount</label>
        <input type="number" class="form-control" id="inputNanme4" asp-for="Amount">
    </div>
    <div class="col-8">
        <label for="inputNanme4" class="form-label">TotalAmount</label>
        <input type="number" class="form-control" id="inputNanme4" asp-for="TotalAmount">
    </div>
    <div class="col-8">
        <label for="inputNanme4" class="form-label">UserName</label>
        <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.userList, "UserID", "UserName"))"></select>
        <option value="">Select User</option>
        </select>
    </div>
    <div class="text-center col-8">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
</form>