@model List<Admin3.Models.BillsModel>
<a asp-action="Add_Edit" asp-controller="Bills" class="btn btn-primary">Add</a>
<table class="table datatable">
    <thead>
        <tr>
            <th>Bill Number</th>
            <th>Bill Date</th>
            <th>Total Amount</th>
            <th>Descount</th>
            <th>Net Amount</th>
            <th>Edit/Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bill in Model)
        {
            <tr>
                <td>@bill.BillNumber</td>
                <td>@bill.BillDate</td>
                <td>@bill.TotalAmount</td>
                <td>@bill.Discount</td>
                <td>@bill.NetAmount</td>
                <td><i class="fa-solid fa-pen-to-square"></i> &nbsp; &nbsp;<i class="fa-solid fa-trash" style="color: #EE4B2B"></i></td>
            </tr>
        }
    </tbody>
</table>